# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Logging
LOG_LEVEL=warning
APP_LOG_LEVEL=info

# Database / Vector Store
PGVECTOR_CONNECTION=postgresql+asyncpg://postgres:postgres@localhost:5432/postgres

# Embedding Provider Configuration
# Possible values: openai, gemini, hf
EMBEDDING_PROVIDER=openai

# OpenAI Settings
OPENAI_EMBED_MODEL=text-embedding-3-small
OPENAI_API_KEY=your_api_key_here

# Gemini Settings
GEMINI_EMBED_MODEL=models/text-embedding-004
GEMINI_API_KEY=your_api_key_here

# HuggingFace Settings
HF_EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# Chunking Configuration
CHUNK_SIZE=1200
CHUNK_OVERLAP=150

# Retrieval Configuration
MAX_RETRIEVED_CHUNKS=100

# X402 Payment Configuration
X402_ENABLED=true
# Price per chunk in USD
X402_PRICE_PER_CHUNK=0.005
X402_PAY_TO_ADDRESS=your_wallet_address
# Possible values: solana-devnet, solana
X402_NETWORK=solana-devnet
# USDC asset address on Solana
X402_ASSET_ADDRESS=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU
# USDC asset decimals
X402_ASSET_DECIMALS=6
X402_FEE_PAYER=2wKupLR9q6wXYppw8Gr2NvWxKBUqm4PPJKkQfoxHDBg4
X402_FACILITATOR_URL=https://facilitator.payai.network

# Web Scraping Configuration
USE_PLAYWRIGHT_FALLBACK=true
MIN_TEXT_LEN=800